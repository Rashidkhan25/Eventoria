<div id="navbar" class="fixed top-0 m-6 inset-x-0 z-50 transition-all duration-700 bg-transparent font-general">
  <nav class="flex items-center justify-between px-6 py-4">

    <!-- Logo -->
    <div class="flex items-center">
      <span class="text-white font-saonara text-4xl">Eventoria</span>
    </div>

    <div class="flex items-center gap-8">
      <div class="hidden md:flex gap-8 text-white font-robert-medium">
        <a href="/home" class="nav-link relative py-2" data-transition>Home</a>
        <a href="/events" class="nav-link relative py-2" data-transition>Events</a>
        <a href="/community" class="nav-link relative py-2" data-transition>Community</a>
        <a href="/contact" class="nav-link relative py-2" data-transition>Contact Us</a>
      </div>

      <% if (session && session.loggedIn) { %>
        <!-- Profile Icon with Dropdown -->
        <div class="relative group">
          <img src="<%= session.userPhoto || '/images/default-profile.jpg' %>" alt="Profile" class="w-[35px] h-[35px] rounded-full cursor-pointer">

          <div class="absolute right-0 mt-2 w-40 bg-white text-black rounded shadow-lg opacity-0 group-hover:opacity-100 transition-opacity">
            <a href="/profile" class="block px-4 py-2 hover:bg-gray-200">Profile</a>
            <a href="/logout" class="block px-4 py-2 hover:bg-gray-200">Logout</a>
          </div>
        </div>
      <% } else { %>
        <!-- Login Button -->
        <a href="/userlogin">
          <button
            class="px-4 py-2 bg-yellow-300 text-black rounded-[2.5rem] hover:bg-yellow-700 transition font-circular-web">
            <span class="relative inline-flex overflow-hidden group">
              <span
                class="translate-y-0 skew-y-0 transition duration-500 group-hover:-translate-y-[120%] group-hover:skew-y-12">
                Login
              </span>
              <span
                class="absolute translate-y-[124%] skew-y-12 transition duration-500 group-hover:translate-y-0 group-hover:skew-y-0">
                Login
              </span>
            </span>
          </button>
        </a>
      <% } %>

    </div>

  </nav>
</div>
