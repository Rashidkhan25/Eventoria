  <style>
    /* Slider container */
    #slider-container::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 15vh;
      background: linear-gradient(to bottom, rgba(0,0,0,0), black);
      pointer-events: none;
    }

    #slider-container {
      overflow: hidden;
      position: relative;
    }

    #slider {
      display: flex;
      transition: transform 1s ease-in-out;
    }

    .slide {
      min-width: 100vw;
      height: 80vh;
      background-size: cover;
      background-position: center;
      position: relative;
    }

    .slide::after {
      content: '';
      position: absolute;
      bottom: 0;
      width: 100%;
      height: 20%;
      background: linear-gradient(to bottom, rgba(0,0,0,0), black);
    }

    .slide-info {
      position: absolute;
      background-color: rgba(0, 0, 0, 0);
      transition: background-color 0.5s ease-in-out;
      bottom: 7rem;
      left: 4rem;
      padding: 1.5rem;
      border-radius: 0.75rem;
      max-width: 45%;
    }

    .slide-info.show {
      background-color: rgba(0, 0, 0, 0.45);
    }

    .slide-info h2 {
      font-size: 4.3rem;
      font-weight: bold;
      padding-bottom: 1rem;
    }

    .slide-info p {
      font-size: 1.2rem;
    }

    /* Hide scrollbar */
    .scrollbar-hide::-webkit-scrollbar { display: none; }
    .scrollbar-hide { -ms-overflow-style: none; scrollbar-width: none; }

    /* Movie rows */
    .movie-card-container {
      position: relative;
      display: flex;
      gap: 2rem;
      padding-top: 3rem;
      padding-left: 4rem;
      scrollbar-width: none;
      height: 300px;
      overflow-y: hidden;  
    }

    .movie-card {
      flex: 0 0 auto;
      width: 18rem;
      transition: transform 0.4s ease;
      cursor: pointer;
      position: relative;
    }

    .movie-card:hover {
      transform: scale(1.4);
      z-index: 10;
    }

    /* Overlay only on image */
    .movie-card .overlay {
      position: absolute;
      bottom: 5.7rem;
      left: 0;
      width: 100%;
      background: rgba(0, 0, 0, 0.66);
      color: white;
      font-size: 0.8rem;
      padding: 0.2rem;
      opacity: 0;
      transform: translateY(100%);
      transition: all 0.3s ease;
      border-bottom-left-radius: 0.75rem;
      border-bottom-right-radius: 0.75rem;
      text-align:left;
    }

    .movie-card:hover .overlay {
      opacity: 1;
      transform: translateY(0);
    }

    .movie-title {
      margin-top: 0.75rem;
      font-size: 1.1rem;
      font-weight: 600;
      text-align: center;
