  <style>
    /* Slider container */
    #slider-container::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 15vh;
      background: linear-gradient(to bottom, rgba(0,0,0,0), black);
      pointer-events: none;
    }

    #slider-container {
      overflow: hidden;
      position: relative;
    }

    #slider {
      display: flex;
      transition: transform 1s ease-in-out;
    }

    .slide {
      min-width: 100vw;
      height: 80vh;
      background-size: cover;
      background-position: center;
      position: relative;
    }

    .slide::after {
      content: '';
      position: absolute;
      bottom: 0;
      width: 100%;
      height: 20%;
      background: linear-gradient(to bottom, rgba(0,0,0,0), black);
    }

    .slide-info {
      position: absolute;
      background-color: rgba(0, 0, 0, 0.4);
      bottom: 7rem;
      left: 4rem;
      padding: 2rem 2.5rem;
      border-radius: 0.75rem;
      max-width: 45%;
    }

    .slide-info h2 {
      font-size: 4rem;
      font-weight: bold;
      padding-bottom: 1rem;
    }

    .slide-info p {
      font-size: 1.25rem;
    }

    /* Hide scrollbar */
    .scrollbar-hide::-webkit-scrollbar { display: none; }
    .scrollbar-hide { -ms-overflow-style: none; scrollbar-width: none; }

    /* Movie card containers */
    .movie-card-container {
      position: relative;
      display: flex;
      overflow-x: auto;
      gap: 2rem;
      padding-top: 3rem;
      padding-left: 4rem;
      scrollbar-width: none;
      height: 300px;
    }

    .movie-card {
      position: relative;
      flex: 0 0 auto;
      width: 18rem;
      height: 12rem;
      border-radius: 0.75rem;
      transition: transform 0.4s ease, box-shadow 0.4s ease;
      overflow: hidden;
      cursor: pointer;
    }

    .movie-card:hover {
      transform: scale(1.4);
      z-index: 10;
    }

    .movie-card-details {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      background: rgba(0, 0, 0, 0.8);
      color: white;
      padding: 0.75rem;
      transform: translateY(100%);
      opacity: 0;
      transition: all 0.3s ease;
    }

    .movie-card:hover .movie-card-details {
      transform: translateY(0);
      opacity: 1;
    }
  </style>
