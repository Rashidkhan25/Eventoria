<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/output.css" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
<style>
  .word-space {
    word-spacing: 3px;
  }
 
 .mask-clip-path {
    width: 50%;
    height: 50%;
    border-radius: 10%;
    overflow: hidden;
    position: relative;
    margin: 0 auto;
  }
  .scrollbar-hide::-webkit-scrollbar {
  display: none;
}
.scrollbar-hide {
  -ms-overflow-style: none;
  scrollbar-width: none;
}
 .rank-number {
    color: black; 
    -webkit-text-stroke: 4px #9ca3af;
    opacity: 0.9; 
  }
   @media (max-width: 768px) {
    .mask-clip-path {
      height: 80vw;
    }
  }
</style>
<body>
  <%- include("partials/navbar") %>

    <section
      class="hero relative h-screen flex items-center justify-center overflow-hidden"
    >
      <video
        autoplay
        muted
        loop
        playsinline
        class="absolute inset-0 w-full h-full object-cover hero-video"
      >
        <source src="/videos/hero.mp4" type="video/mp4" />
        Your browser does not support the video tag.
      </video>

      <div class="absolute inset-0 bg-black/30"></div>

      <div class="absolute top-44 left-8 md:left-16 z-10 max-w-xs md:max-w-xl">
        <h3
          class="text-6xl md:text-9xl text-white font-zentry special-font drop-shadow-lg"
        >
          E<b>V</b>ENT<b>O</b>RI<b>A</b>
        </h3>

        <p class="mt-4 text-lg text-gray-200 font-general leading-relaxed">
          Eventoria is your ultimate platform for discovering, hosting, and experiencing events worldwide.
        </p>
        <button
          class="mt-3 md:mt-5 flex gap-1 px-3 py-3 md:px-5 md:py-3 rounded-[4rem] bg-blue-600 text-white hover:bg-blue-700 transition"
        >
          <%- include('partials/send-icon') %>
          <span
            class="relative inline-flex overflow-hidden font-general text-xs uppercase group"
          >
            <span
              class="translate-y-0 skew-y-0 transition duration-500 group-hover:-translate-y-[160%] group-hover:skew-y-12"
            >
              Explore Events
            </span>
            <span
              class="absolute translate-y-[164%] skew-y-12 transition duration-500 group-hover:translate-y-0 group-hover:skew-y-0"
            >
              Explore Events
            </span>
          </span>
        </button>
      </div>
    </section>

   <section class="pt-10 min-h-screen w-screen relative" id="about-section">
  <!-- Title -->
  <div class="relative mb-8 mt-10 flex flex-col items-center gap-5 z-10">
    <p class="font-general text-sm uppercase md:text-[14px] text-gray-700">
      Welcome to Eventoria
    </p>

   <h1 class="mt-5 text-center text-black text-4xl md:text-6xl font-zentry special-font word-space tracking-wide">
  Disc<b>o</b>ver & C<b>o</b>nnect <br /> through Unforgettable <b>E</b>vents
</h1>


    <div class="about-subtext text-gray-800 max-w-xl mx-auto text-center">
      <p>Step into a world where every event becomes an experience worth sharing.</p>
      <p class="text-gray-500">
        Eventoria brings together communities, organizers, and attendees on a single platform 
    to create, explore, and enjoy events like never before.
      </p>
    </div>
  </div>

  <!-- ✅ Clip Animation Area -->
  <div class="h-[100vh] w-screen mt-14 md:mt-20" id="clip">
    <div class="mask-clip-path about-image">
      <img src="/images/contactUsbg.jpg" alt="Background" class="absolute left-0 top-0 w-full h-full object-cover" />
    </div>
  </div>
</section>

<section class="bg-black text-white px-10 pt-10">
  <h2 class="text-5xl font-circular-web ">Top 10 Trending Events</h2>

  <div class="flex space-x-8 overflow-x-auto scrollbar-hide">
    <% const events = [
      {rank: 1, title: "Event One", img: "/images/trending1.jpg"},
      {rank: 2, title: "Event Two", img: "/images/trending1.jpg"},
      {rank: 3, title: "Event Three", img: "/images/trending1.jpg"},
      {rank: 4, title: "Event Four", img: "/images/trending1.jpg"},
      {rank: 5, title: "Event Five", img: "/images/trending1.jpg"},
      {rank: 6, title: "Event Six", img: "/images/trending1.jpg"},
      {rank: 7, title: "Event Seven", img: "/images/trending1.jpg"},
      {rank: 8, title: "Event Eight", img: "/images/trending1.jpg"},
      {rank: 9, title: "Event Nine", img: "/images/trending1.jpg"},
      {rank: 10, title: "Event Ten", img: "/images/trending1.jpg"}
    ]; %>

    <% events.forEach(event => { %>
    <div class="flex items-center flex-none">
      
     <span class="rank-number text-[294px] font-extrabold mr-[-20px] z-0">
  <%= event.rank %>
</span>

      <img src="<%= event.img %>" alt="<%= event.title %>"
           class="relative z-10 w-[170px] shadow-lg">
    </div>
    <% }) %>
  </div>
</section>

<section class="bg-black pb-36">
  <div class="container mx-auto px-3 md:px-10">
    
    <div class="px-5 py-32">
      <p class="font-circular-web text-lg text-blue-50">Into the Event Layer</p>
      <p class="max-w-md font-circular-web text-lg text-blue-50 opacity-50">
        Immerse yourself in an ever-expanding universe where events converge into unforgettable shared experiences.
      </p>
    </div>

    <!-- Main Feature Card -->
    <div class="bento-tilt border-hsla relative mb-7 h-64 w-full overflow-hidden rounded-md md:h-[65vh]">
      <div class="bento-card relative size-full">
        <video src="/videos/hero.mp4" loop muted autoplay class="absolute left-0 top-0 size-full object-cover object-center"></video>
        <div class="relative z-10 flex size-full flex-col justify-between p-5 text-blue-50">
          <div>
            <h1 class="bento-title special-font">Radia<b>n</b>t</h1>
            <p class="mt-3 max-w-64 text-xs md:text-base">Turn your activities into a rewarding adventure.</p>
          </div>
          <div class="hover-btn border-hsla relative flex w-fit cursor-pointer items-center gap-1 overflow-hidden rounded-full bg-white/20 px-5 py-2 text-xs uppercase text-white/80">
            <span>coming soon</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Grid for other cards -->
    <div class="grid h-[135vh] w-full grid-cols-2 grid-rows-2 gap-25">
      <% const features = [
        {video:'/videos/hero.mp4', title:'Zig<b>m</b>a', desc:'Anime & gaming inspired NFT collection'},
        {video:'/videos/hero3.mp4', title:'N<b>e</b>xus', desc:'Gamified social hub for event interaction'},
        {video:'/videos/hero3.mp4', title:'Az<b>u</b>l', desc:'AI-powered event assistant'},
        {video:'/videos/hero.mp4', title:'Az<b>u</b>l', desc:'AI-powered event assistant'}
      ]; %>

      <% features.forEach(f => { %>
        <div class="bento-tilt relative overflow-hidden rounded-md bg-black">
          <div class="bento-card relative size-full">
            <video src="<%= f.video %>" loop muted autoplay class="absolute left-0 top-0 size-full object-cover"></video>
            <div class="relative z-10 flex size-full flex-col justify-between p-5 text-blue-50">
              <div>
                <h1 class="bento-title special-font"><%- f.title %></h1>
                <p class="mt-3 max-w-64 text-xs md:text-base"><%= f.desc %></p>
              </div>
              <div class="hover-btn border-hsla relative flex w-fit cursor-pointer items-center gap-1 rounded-full bg-white/20 px-5 py-2 text-xs uppercase text-white/80">
                <span>coming soon</span>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</section>
<p class="text-center p-6 bg-black text-white text-sm">© 2025 Eventoria. All rights reserved.</p>
<script src="/js/navbar.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"></script>
<script src="/js/home.js"></script>
</body>

</html>
